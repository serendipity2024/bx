{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build/types",
    "baseUrl": ".",
    "paths": {
      "api-service": ["src/api-service/lib"],
      "bx-constants": ["src/bx-constants"],
      "code-engine": ["src/code-engine"],
      "command-manager": ["src/command-manager/lib"],
      "common-interfaces": ["src/common-interfaces"],
      "components-x": ["src/components-x/lib"],
      "conversions": ["src/conversions/lib"],
      "dialog-x": ["src/dialog-x/lib"],
      "domain-x": ["src/domain-x/lib"],
      "display-relationship": ["src/display-relationship/lib"],
      "file-service": ["src/file-service/lib"],
      "form-builder": ["src/form-builder/lib"],
      "icon-modal": ["src/icon-modal/lib"],
      "layer-panel": ["src/layer-panel/lib"],
      "model": ["src/model/lib"],
      "realtime-io": ["src/realtime-io/lib"],
      "rendered-html": ["src/rendered-html/lib"],
      "sample-package": ["src/sample-package/lib"],
      "serializable": ["src/serializable/lib"],
      "session": ["src/session/lib"],
      "shared-components": ["src/shared-components"],
      "smart-flex": ["src/smart-flex/lib"],
      "utils": ["src/utils/lib"],
      "event-manager": ["src/event-manager/lib"],
      "session-plugins": ["src/session-plugins/lib"],
      "global-ref-map": ["src/global-ref-map/lib"],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2017", "es2018.promise"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "allowUnreachableCode": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "src/electron-app",
    "node_modules",
    "dist",
    "tempPackages",
    "src/server",
    "scripts",
    "config",
    "webpack",
    "jest",
    "build",
    "src/**/__tests__",
    "*/**/__mocks__"
  ]
}